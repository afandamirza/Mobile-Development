<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.classification.FailedResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left"
                android:background="@null"
                android:layout_marginTop="40dp"
                app:tint="#269E40" />

            <ImageView
                android:layout_width="47dp"
                android:layout_marginTop="-40dp"
                android:layout_height="75dp"
                android:src="@drawable/image_trash"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="42dp"
                android:text="Oops!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/result"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="42dp"
                android:text="Terjadi Kesalahan!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/intruksi_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:textSize="14sp"
                android:layout_marginTop="38dp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:text="Error Instruction" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="83dp"
                android:paddingBottom="112dp"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:fontFamily="@font/chakra_petch_bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_coba_lagi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_linear_gradient_green_rounded"
        app:backgroundTint="@null"
        android:text="Coba Lagi"
        android:layout_toStartOf="@id/divider"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_kembali"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_linear_gradient_grey_rounded"
        app:backgroundTint="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="38dp"
        android:layout_toEndOf="@id/divider"
        android:fontFamily="@font/open_sans_bold"
        android:text="Kembali"
        android:textColor="#1B9536"
        android:textSize="18sp"/>
</RelativeLayout>